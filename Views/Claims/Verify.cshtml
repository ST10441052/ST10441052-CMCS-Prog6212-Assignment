@model List<CMCSPrototype.Models.Claim>
@{
    ViewData["Title"] = "Verify Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Verify and Approve Claims</h2>
<p class="muted">Prototype: Approve buttons simulate the action and show a message.</p>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.ClaimMonth</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>
                    @if (claim.Status == "Pending")
                    {
                        <span class="status-pending">@claim.Status</span>
                    }
                    else
                    {
                        <span class="status-approved">@claim.Status</span>
                    }
                </td>
                <td>
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button class="btn" type="submit">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
