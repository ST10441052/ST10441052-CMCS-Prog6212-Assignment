@model CMCSPrototype.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Submit Monthly Claim</h2>
<p class="muted">Prototype: submitting shows a simulated success message.</p>

<form asp-action="Submit" method="post">
    <div class="form-group">
        <label>Claim Month</label>
        <input asp-for="ClaimMonth" placeholder="e.g. March 2025" required />
    </div>
    <div class="form-group">
        <label>Hours Worked</label>
        <input asp-for="HoursWorked" type="number" step="0.1" required />
    </div>
    <div class="form-group">
        <label>Hourly Rate</label>
        <input asp-for="HourlyRate" type="number" step="0.01" required />
    </div>
    <div class="form-group">
        <label>Supporting Document</label>
        <input asp-for="SupportingDocument" type="text" placeholder="Upload (prototype only)" />
    </div>
    <button type="submit" class="btn">Submit Claim</button>
</form>

@if (TempData["PrototypeMessage"] != null)
{
    <div class="alert alert-success">@TempData["PrototypeMessage"]</div>
}
